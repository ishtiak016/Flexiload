<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    android:gravity="center"
    tools:context=".pakageBuyPage">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:id="@+id/minutes"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/customborder"
            android:textSize="20sp"
            android:textStyle="bold"
            android:text="600 Minute"
            android:gravity="center"
            android:textColor="@color/black"/>
        <TextView
            android:id="@+id/gbs"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/customborder"
            android:textSize="20sp"
            android:textStyle="bold"
            android:text="25 GB"
            android:gravity="center"
            android:textColor="@color/black"/>
        <TextView
            android:id="@+id/smss"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/customborder"
            android:textSize="20sp"
            android:textStyle="bold"
            android:text="200sms"
            android:gravity="center"
            android:textColor="@color/black"/>
        <TextView
            android:id="@+id/days"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/customborder"
            android:textSize="20sp"
            android:textStyle="bold"
            android:text="30 Days"
            android:gravity="center"
            android:textColor="@color/black"/>
        <TextView
            android:id="@+id/area"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/customborder"
            android:textSize="20sp"
            android:textStyle="bold"
            android:text="area"
            android:gravity="center"
            android:textColor="@color/black"/>
        <TextView
            android:id="@+id/operators"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/customborder"
            android:textSize="20sp"
            android:textStyle="bold"
            android:text="Grameenphone"
            android:gravity="center"
            android:textColor="@color/black"/>
        <TextView
            android:id="@+id/regularPrices"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/customborder"
            android:textSize="20sp"
            android:textStyle="bold"
            android:text="Regular Price"
            android:gravity="center"
            android:textColor="@color/black"/>
        <TextView
            android:id="@+id/offerprices"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/customborder"
            android:textSize="30sp"
            android:textStyle="bold"
            android:text="Offer Price BDT 300"
            android:gravity="center"
            android:textColor="#EA1010"/>

        <EditText
            android:inputType="numberDecimal"
            android:id="@+id/userNumbers"
            android:layout_weight="1"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/customborder"
            android:textSize="16sp"
            android:hint="Enter Phone Number "
            android:gravity="center"
            android:textColor="@color/black"/>
        <EditText
            android:inputType="numberDecimal"
            android:id="@+id/pins"
            android:layout_weight="1"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/customborder"
            android:textSize="16sp"
            android:hint="Enter Pin "
            android:gravity="center"
            android:textColor="@color/black"/>
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/sends"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/textviewcustom"
            android:layout_marginRight="4dp"
            android:textSize="16sp"
            android:text="Send"
            android:gravity="center"
            android:textColor="@color/black"/>
    </LinearLayout>

</LinearLayout>